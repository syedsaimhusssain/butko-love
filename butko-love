<script>
const passInput = document.getElementById("pass");
const unlockBtn = document.getElementById("unlockBtn");
const teaseChoices = document.getElementById("teaseChoices");
const noBtn = document.getElementById("noBtn");
const yesBtn = document.getElementById("yesBtn");
const question = document.getElementById("question");
const text = document.getElementById("text");
const title = document.getElementById("title");
const bgMusic = document.getElementById("bgMusic");
const card = document.getElementById("card");
const screenshotBtn = document.getElementById("screenshotBtn");

const PASSWORDS = ["butko","jaan","baby"]; 

unlockBtn.onclick = () => {
    const val = passInput.value.toLowerCase();
    if(PASSWORDS.includes(val)){
        passInput.style.display="none";
        unlockBtn.style.display="none";
        teaseChoices.style.display="block";
        text.innerText = "Achha Butkoâ€¦ ab thoda mazaak shuru karte hain ğŸ˜";
        bgMusic.play();
    } else {
        text.innerText="Oopsâ€¦ lagta hai galat password ğŸ˜Œ";
    }
};

// No button teasing
noBtn.addEventListener("mouseover", () => {
    const x = Math.random()*140-70;
    const y = Math.random()*140-70;
    noBtn.style.transform = `translate(${x}px,${y}px)`;
});

// Yes button click
yesBtn.onclick = () => {
    teaseChoices.style.display="none";
    startTease();
};

// Teasing messages
const teases = [
    "Butko, itni cute ho ke website bhi sharma rahi hai ğŸ˜³",
    "Warning âš ï¸ Butko ka smile dil chura sakta hai",
    "Scroll slow kijiye Butkoâ€¦ dil phisal raha hai ğŸ’˜",
    "Agar muskura rahe hain, haan mujhe pata hai ğŸ˜"
];

function startTease(){
    let i=0;
    function next(){
        if(i<teases.length){
            text.innerText = teases[i];
            i++;
            setTimeout(next,1800);
        } else {
            showProposal();
        }
    }
    next();
}

// Typing effect for proposal
const proposalMessage = `Butkoâ€¦ aap meri har khushi ka reason hain â¤ï¸
Meri zindagi ki sabse pyari musibat hainâ€¦
Aur main chahata hoon hamesha aapke saath rahoon ğŸ’
Kya aap mujhse shaadi karengi?`;

function typeWriter(msg, el, speed=40, callback){
    let idx=0;
    el.innerText="";
    function type(){
        if(idx<msg.length){
            el.innerText += msg.charAt(idx);
            idx++;
            setTimeout(type,speed);
        } else {
            if(callback) callback();
        }
    }
    type();
}

// Create floating hearts
function createHeart(){
    const heart = document.createElement("div");
    heart.className="heart";
    heart.innerText="â¤ï¸";
    heart.style.left = Math.random()*card.offsetWidth + "px";
    card.appendChild(heart);
    setTimeout(()=>card.removeChild(heart),2000);
}

// Show proposal with Yes/No buttons
function showProposal(){
    title.innerText="Proposal Time ğŸ’–";
    typeWriter(proposalMessage, text, 50, () => {
        const yesBtn = document.createElement("button");
        yesBtn.className="success";
        yesBtn.innerText="Yes ğŸ˜";
        yesBtn.onclick = () => {
            alert("Yay! â¤ï¸ Butko said Yes! ğŸ’");
            screenshotBtn.style.display="block";
            // Hearts raining
            const heartInterval = setInterval(createHeart, 200);
            setTimeout(()=>clearInterval(heartInterval),3000);
        };
        
        const noBtn = document.createElement("button");
        noBtn.className="danger";
        noBtn.innerText="No ğŸ™ˆ";
        noBtn.onclick = () => alert("Oh noâ€¦ Butko, try again ğŸ˜Œ");

        card.appendChild(yesBtn);
        card.appendChild(noBtn);
    });
}

// Screenshot feature
screenshotBtn.onclick = () => {
    html2canvas(card).then(canvas => {
        const link = document.createElement("a");
        link.download = "butko_memory.png";
        link.href = canvas.toDataURL();
        link.click();
    });
};
</script>
